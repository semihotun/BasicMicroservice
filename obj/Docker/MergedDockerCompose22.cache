networks:
  net_backendservices:
    driver: bridge
    external: true
    name: net_backendservices
  net_frontend:
    driver: bridge
    external: true
    name: net_frontend
services:
  favoriteservice:
    build:
      context: C:\Users\Semih\source\repos\CrmProject
      dockerfile: src/Services/FavoriteService/FavoriteService/Dockerfile
    container_name: favoriteservice
    depends_on:
      pageservice:
        condition: service_started
      s_consul:
        condition: service_started
      s_rabbitmq:
        condition: service_started
      s_sqlserver:
        condition: service_started
      web.apigateway:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      ASPNETCORE_URLS: http://+:5001
      ConsulConfig__Address: http://s_consul:8500
      ConsulConfig__ServiceAddress: http://favoriteservice:5001
      ConsulConfig__ServiceId: favoriteservice
      ConsulConfig__ServiceName: favoriteservice
    image: favoriteservice
    networks:
      net_backendservices: {}
    ports:
    - published: 5001
      target: 5001
  identityservice:
    build:
      context: C:\Users\Semih\source\repos\CrmProject
      dockerfile: src/Services/IdentityService/IdentityService/Dockerfile
    container_name: identityservice
    depends_on:
      s_consul:
        condition: service_started
      s_rabbitmq:
        condition: service_started
      s_sqlserver:
        condition: service_started
      web.apigateway:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      ASPNETCORE_URLS: http://+:3000
      ConsulConfig__Address: http://s_consul:8500
      ConsulConfig__ServiceAddress: http://identityservice:3000
      ConsulConfig__ServiceId: identityservice
      ConsulConfig__ServiceName: identityservice
    image: identityservice
    networks:
      net_backendservices: {}
    ports:
    - published: 3000
      target: 3000
  pageservice:
    build:
      context: C:\Users\Semih\source\repos\CrmProject
      dockerfile: src/Services/PageService/PageService/Dockerfile
    container_name: pageservice
    depends_on:
      s_consul:
        condition: service_started
      s_rabbitmq:
        condition: service_started
      s_sqlserver:
        condition: service_started
      web.apigateway:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      ASPNETCORE_URLS: http://+:5002
      ConsulConfig__Address: http://s_consul:8500
      ConsulConfig__ServiceAddress: http://pageservice:5002
      ConsulConfig__ServiceId: pageservice
      ConsulConfig__ServiceName: pageservice
    image: pageservice
    networks:
      net_backendservices: {}
    ports:
    - published: 5002
      target: 5002
  s_consul:
    container_name: c_consul
    image: consul
    networks:
      net_backendservices: {}
      net_frontend: {}
    ports:
    - published: 8500
      target: 8500
    - protocol: tcp
      published: 8600
      target: 8600
    - protocol: udp
      published: 8600
      target: 8600
  s_elasticsearch:
    container_name: s_elasticsearch
    environment:
      ES_JAVA_OPTS: -Xms512m -Xmx512m
      http.host: 0.0.0.0
      network.host: 0.0.0.0
      transport.host: localhost
    image: docker.elastic.co/elasticsearch/elasticsearch:6.6.1
    mem_limit: 1g
    networks:
      net_backendservices: {}
    ports:
    - published: 9200
      target: 9200
    - published: 9300
      target: 9300
    ulimits:
      memlock:
        hard: -1
        soft: -1
    volumes:
    - esdata:/usr/share/elasticsearch/data:rw
  s_graylog:
    container_name: s_graylog
    depends_on:
      s_elasticsearch:
        condition: service_started
      s_mongo:
        condition: service_started
    environment:
      GRAYLOG_HTTP_EXTERNAL_URI: http://127.0.0.1:9000/
      GRAYLOG_PASSWORD_SECRET: mfyz11sanane22banane
      GRAYLOG_ROOT_PASSWORD_SHA2: 8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918
    image: graylog/graylog:3.0
    links:
    - s_elasticsearch
    - s_mongo
    networks:
      net_backendservices: {}
    ports:
    - published: 1514
      target: 1514
    - protocol: udp
      published: 1514
      target: 1514
    - published: 5555
      target: 5555
    - published: 9000
      target: 9000
    - published: 12201
      target: 12201
    - protocol: udp
      published: 12201
      target: 12201
  s_kibana:
    container_name: s_kibana
    depends_on:
      s_elasticsearch:
        condition: service_started
    image: docker.elastic.co/kibana/kibana:6.6.1
    networks:
      net_backendservices: {}
    ports:
    - published: 5601
      target: 5601
  s_mongo:
    container_name: s_mongo
    environment:
      MONGO_INITDB_ROOT_PASSWORD: semihO123
      MONGO_INITDB_ROOT_USERNAME: root
    image: mongo
    networks:
      net_backendservices: {}
    ports:
    - published: 27017
      target: 27017
  s_mongo-express:
    container_name: s_mongo-express
    depends_on:
      s_mongo:
        condition: service_started
    environment:
      ME_CONFIG_BASICAUTH_PASSWORD: semihO123
      ME_CONFIG_BASICAUTH_USERNAME: root
      ME_CONFIG_MONGODB_ADMINPASSWORD: semihO123
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
      ME_CONFIG_MONGODB_ENABLE_ADMIN: "true"
      ME_CONFIG_MONGODB_SERVER: s_mongo
      ME_CONFIG_MONGODB_URL: mongo://root:semihO123@s_mongo:27017/
    image: mongo-express
    networks:
      net_backendservices: {}
    ports:
    - published: 8888
      target: 8081
    restart: always
  s_nginx:
    container_name: c_nginx
    image: nginx
    ports:
    - published: 7070
      target: 80
  s_rabbitmq:
    container_name: c_rabbitmq
    image: rabbitmq:3-management
    networks:
      net_backendservices: {}
      net_frontend: {}
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
    volumes:
    - rabbitmq:/var/lib/rabbitmq:rw
  s_redis:
    container_name: c_redis
    image: redis
    networks:
      net_backendservices: {}
    ports:
    - published: 6379
      target: 6379
    volumes:
    - /opt/app_data/redis:/data:rw
  s_sqlserver:
    container_name: c_sqlserver
    environment:
      ACCEPT_EULA: sa
      MSSQL_SA_PASSWORD: semihO123.
    image: mcr.microsoft.com/mssql/server:2019-latest
    networks:
      net_backendservices: {}
    ports:
    - published: 1457
      target: 1433
    user: root
    volumes:
    - sqlserver_data:/var/opt/mssql/data:rw
    - sqlserver_log:/var/opt/mssql/log:rw
  sitemapservice:
    build:
      context: C:\Users\Semih\source\repos\CrmProject
      dockerfile: src/Services/SiteMapService/SiteMapService/Dockerfile
    container_name: sitemapservice
    depends_on:
      pageservice:
        condition: service_started
      s_consul:
        condition: service_started
      s_rabbitmq:
        condition: service_started
      s_sqlserver:
        condition: service_started
      web.apigateway:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      ASPNETCORE_URLS: http://+:5003
      ConsulConfig__Address: http://s_consul:8500
      ConsulConfig__ServiceAddress: http://sitemapservice:5003
      ConsulConfig__ServiceId: sitemapservice
      ConsulConfig__ServiceName: sitemapservice
    image: sitemapservice
    networks:
      net_backendservices: {}
    ports:
    - published: 5003
      target: 5003
  web.apigateway:
    build:
      context: C:\Users\Semih\source\repos\CrmProject
      dockerfile: src/AppGateways/Web.ApiGateway/Dockerfile
    container_name: web.apigateway
    depends_on:
      s_consul:
        condition: service_started
      s_rabbitmq:
        condition: service_started
      s_sqlserver:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      ASPNETCORE_URLS: http://+:4100
      ConsulConfig__Address: http://s_consul:8500
      ConsulConfig__ServiceAddress: http://web.apigateway:4100
      ConsulConfig__ServiceId: web.apigateway
      ConsulConfig__ServiceName: web.apigateway
    image: webapigateway
    networks:
      net_backendservices: {}
    ports:
    - published: 4100
      target: 4100
  webapp:
    build:
      context: C:\Users\Semih\source\repos\CrmProject
      dockerfile: src/Clients/AngularWebApp/WebApp/Dockerfile
    container_name: webapp
    image: webapp
    networks:
      net_frontend: {}
    ports:
    - published: 2300
      target: 2300
version: '3.4'
volumes:
  esdata: {}
  rabbitmq: {}
  sqlserver_data: {}
  sqlserver_log: {}